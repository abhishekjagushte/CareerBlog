<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".PostPage">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:id="@+id/post_imageview"
            android:scaleType="fitCenter"
            android:contentDescription="@string/post_image_description" />


        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/cardview_dark_background"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_margin"
            android:elevation="4dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                style="@style/general_heading"
                android:id="@+id/post_title"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/post_page_date"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>



        <TextView
            android:id="@+id/post_content"
            android:layout_marginTop="30dp"

            android:visibility="gone"

           style="@style/post_page_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools">


            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="gone"

                android:id="@+id/post_page_webview"/>


        </LinearLayout>

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/post_page_content"
            android:id="@+id/htmlTv"/>


    </LinearLayout>
</ScrollView>
